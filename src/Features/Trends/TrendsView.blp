using Gtk 4.0;
using Adw 1;

template $RpyTrendsView : Adw.NavigationPage {
  title: 'Trends';

  Adw.ToolbarView {
    [top]
    Adw.HeaderBar {}

    Gtk.Stack {
      visible-child-name: bind $state_to_nick(template.view-model as <$RpyTrendsViewModel>.state) as <string>;

      Gtk.StackPage {
        name: 'in-progress';
        child: Gtk.Spinner {
          height-request: 32;
          spinning: true;
          valign: center;
        };
      }

      Gtk.StackPage {
        name: 'error';
        child: Gtk.Label {
          label: 'An error occurred!';
        };
      }

      Gtk.StackPage {
        name: 'success';
        child: Gtk.ScrolledWindow {
          hscrollbar-policy: never;

          Adw.ClampScrollable {
            maximum-size: 1280;
            tightening-threshold: 768;

            Gtk.GridView {
              max-columns: 4;

              model: Gtk.NoSelection {
                model: bind template.view-model as <$RpyTrendsViewModel>.trending-videos;
              };

              factory: Gtk.BuilderListItemFactory {
                template Gtk.ListItem {
                  focusable: false;
                  child: $RpyVideoItem {
                    thumbnail-uri: bind template.item as <$RpyVideo>.thumbnail-uri;
                    title: bind template.item as <$RpyVideo>.title;
                    author: bind template.item as <$RpyVideo>.author;
                    view-count: bind template.item as <$RpyVideo>.view-count;
                    publication-date: bind template.item as <$RpyVideo>.publication-date;
                  };
                }
              };

              styles ['rpy-trends-grid']
            }
          }
        };
      }
    }
  }
}
