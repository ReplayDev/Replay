<interface>

<template class="ReplayAppWindow" parent="HdyApplicationWindow">
  <property name="title" translatable="yes">Replay</property>
  <property name="default-width">1024</property>
  <property name="default-height">600</property>

  <child>
    <object class="GtkBox">
      <property name="orientation">vertical</property>

      <child>
        <object class="ReplayHeaderBar" />
      </child>

      <child>
        <object class="GtkBox">
          <property name="vexpand">True</property>

          <child>
            <object class="GtkRevealer" id="_revealer">
              <property name="transition-type">slide-right</property>

              <child>
                <object class="ReplayStackSidebar">
                  <property name="stack">_content_stack</property>
                </object>
              </child>

            </object>
          </child>

          <child>
            <object class="GtkStack" id="_content_stack">
              <property name="hexpand">True</property>
              <property name="transition-type">crossfade</property>
            </object>
          </child>

        </object>
      </child>

    </object>
  </child>

</template>

</interface>
