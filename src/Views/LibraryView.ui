<interface>

<template class="RpyLibraryView" parent="RpyView">
	<property name="icon-name">rpy-library-symbolic</property>
	<property name="title" translatable="yes">Library</property>

	<child>
		<object class="HdyLeaflet" id="leaflet">
			<property name="can-unfold">False</property>
			<property name="can-swipe-back">True</property>

			<child>
				<object class="RpyViewList" id="_view_list">
					<signal name="notify::selected-view" handler="on_view_list_selected_view_changed" />
				</object>
			</child>

			<child>
				<object class="GtkStack" id="stack" />
			</child>

		</object>
	</child>

</template>

</interface>
