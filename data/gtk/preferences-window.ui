<interface>

  <requires lib="gtk+" version="3.24"/>

  <template class="ReplayPreferencesWindow" parent="HdyPreferencesWindow">

    <property name="title" translatable="yes">Preferences</property>

    <child>
      <object class="HdyPreferencesPage">

        <property name="visible">True</property>
        <!-- Translators: This is the title for the appearance section on the preferences window -->
        <property name="title" translatable="yes">Appearance</property>
        <property name="icon-name">settings-appearance-symbolic</property>

        <child>
          <object class="HdyPreferencesGroup">

            <property name="visible">True</property>

            <child>
              <object class="HdyActionRow" id="switch_row">

                <property name="visible">True</property>
                <!-- Translators: This is the title for the dark theme toggle in the preferences window -->
                <property name="title" translatable="yes">Use dark theme</property>
                <!-- Translators: This is the subtitle for the dark theme toggle in the preferences window -->
                <property name="subtitle" translatable="yes">Activates dark theme on the app.</property>

                <child>
                  <object class="GtkSwitch" id="toggle">
                    <property name="visible">True</property>
                    <property name="valign">center</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
