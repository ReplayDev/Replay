<interface>

  <requires lib="gtk+" version="3.24"/>
  <requires lib="libhandy" version="0.0"/>

  <template class="UnitubeMainWindow" parent="HdyApplicationWindow">

    <property name="default-width">1024</property>
    <property name="default-height">600</property>
    <signal name="key-press-event" handler="on_key_press_event"/>

    <child>
      <object class="GtkBox">

        <property name="visible">True</property>
        <property name="orientation">vertical</property>

        <child>
          <object class="UnitubeMainHeaderBar" id="headerbar">

            <property name="visible">True</property>
            <property name="stack">main-stack</property>
            <accelerator key="F10" signal="toggle-menu"/>
            <accelerator key="f" modifiers="GDK_CONTROL_MASK" signal="toggle-search-mode"/>

            <style>
              <class name="titlebar"/>
            </style>

          </object>
        </child>

        <child>

          <object class="GtkStack" id="main-stack">

            <property name="visible">True</property>
            <property name="transition-type">slide-left-right</property>

            <child>

              <object class="UnitubeTrendingView" id="trending_view">
                <property name="visible">True</property>
              </object>

              <packing>
                <property name="name">trending</property>
                <property name="title">Trending</property>
                <property name="icon-name">youtube-trending-symbolic</property>
              </packing>
            </child>

            <child>

              <object class="UnitubeSubscriptionsView" id="subs_view">
                <property name="visible">True</property>
              </object>

              <packing>
                <property name="name">subs</property>
                <property name="title">Subscriptions</property>
                <property name="icon-name">youtube-subscriptions-symbolic</property>
              </packing>
            </child>

            <child>

              <object class="UnitubeLibraryView" id="library_view">
                <property name="visible">True</property>
              </object>

              <packing>
                <property name="name">library</property>
                <property name="title">Library</property>
                <property name="icon-name">youtube-library-symbolic</property>
              </packing>
            </child>
          </object>

          <packing>
            <property name="fill">True</property>
            <property name="expand">True</property>
          </packing>
        </child>

        <child>
          <object class="HdyViewSwitcherBar" id="view_switcher_bar">
            <property name="visible">True</property>
            <property name="stack">main-stack</property>
            <property name="reveal" bind-source="headerbar" bind-property="is-narrow-mode" bind-flags="bidirectional"/>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
