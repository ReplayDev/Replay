{
  "id": "app.drey.Replay.Devel",
  "command": "app.drey.Replay.Devel",

  "runtime": "org.gnome.Platform",
  "runtime-version": "43",
  "sdk": "org.gnome.Sdk",

  "sdk-extensions": ["org.freedesktop.Sdk.Extension.vala"],
  "build-options": {
    "prepend-path": "/usr/lib/sdk/vala/bin",
    "prepend-ld-library-path": "/usr/lib/sdk/vala/bin"
  },

  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri"
  ],

  "modules": [
    {
      "name": "jsonrpc-glib",
      "buildsystem": "meson",
      "cleanup": ["*"],
      "sources": [
        {
          "type": "git",
          "url": "https://gitlab.gnome.org/GNOME/jsonrpc-glib.git",
          "tag": "3.42.0"
        }
      ]
    },
    {
      "name": "vala-language-server",
      "buildsystem": "meson",
      "cleanup": ["*"],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/vala-lang/vala-language-server.git",
          "tag": "0.48.5"
        },
        {
          "type": "patch",
          "paths": [
            "00-vls-fix-regex-for-links-in-comments.patch",
            "01-vls-fix-259.patch"
          ]
        }
      ]
    },
    {
      "name": "vul",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "git",
          "url": "https://gitlab.gnome.org/BZHDeveloper/vul.git"
        }
      ]
    },
    {
      "name": "replay",
      "buildsystem": "meson",
      "config-opts": ["-Dprofile=devel"],
      "sources": [
        {
          "type": "dir",
          "path": ".."
        }
      ]
    }
  ]
}
